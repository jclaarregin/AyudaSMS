<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="krlitos.ayudasms" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Ayuda SMS"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".contactos.AgregarContacto"></activity>
        <activity android:name=".contactos.MostrarContactos"></activity>
        <activity android:name=".contactos.ModificarContacto"></activity>
    </application>
    <uses-permission android:name="android.permission.SEND_SMS"/>>


</manifest>